<UserControl x:Class="Dct.UI.Alarm.Views.AlarmHistoryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dct.UI.Alarm.Views"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<UserControl.Resources>
		<!-- HandyControl 主题和样式 -->
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/SkinDefault.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/HandyControl;component/Themes/Theme.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Dct.UI.Alarm;component/Themes/Generic.xaml" />
            </ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Margin="0,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="35" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Label
         Width="300"
         Height="30"
         Margin="0,5,0,0"
         Background="Transparent"
         BorderThickness="0"
         Content="{Binding Title}"
         FontSize="16"
         FontWeight="UltraBlack" />
            <Border
         Grid.Row="1"
         Margin="5"
         BorderBrush="Black"
         BorderThickness="1">
                <DataGrid
             Grid.Row="1"
             Padding="0"
             AlternationCount="1"
             Background="Transparent"
             BorderBrush="Black"
             AutoGenerateColumns="False"
             BorderThickness="1"
             CanUserSortColumns="False"
             HeadersVisibility="Column"
             IsReadOnly="False"
             ItemsSource="{Binding AlarmList}">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Width="45" MinWidth="45">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Label
                                 Height="25"
                                 MinWidth="50" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn
                     Width="120"
                     MinWidth="120"
                     Binding="{Binding Code}"
                     Header="Code" />
                        <DataGridTextColumn
                     Width="150"
                     MinWidth="150"
                     Binding="{Binding StartTime}"
                     Header="StartTime" />
                        <DataGridTextColumn
                     Width="150"
                     MinWidth="150"
                     Binding="{Binding Duration}"
                     Header="Duration" />
                        <DataGridTextColumn
                            Width="300"
                            MinWidth="300"
                            Binding="{Binding Description}"
                            Header="Description" />
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
