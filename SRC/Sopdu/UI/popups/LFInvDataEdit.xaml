<Window x:Class="Sopdu.UI.popups.LFInvDataEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LFInvDataEdit" Height="200" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*" />
            <RowDefinition Height="20*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30*" />
                <ColumnDefinition Width="50*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="LF Inv #" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18" FontWeight="ExtraBlack"></Label>
            <TextBox Grid.Column="1" Width="230" Height="40" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18" FontWeight="ExtraBlack" Name="invtext"></TextBox>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*" />
                <ColumnDefinition Width="50*" />
                <ColumnDefinition Width="50*" />
                <ColumnDefinition Width="50*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Margin="10,0,10,10" Content="Add New" IsCancel="False" Click="Button_Click"></Button>
            <Button Grid.Column="1" Margin="10,0,10,10" Content="Remove" IsCancel="False" Click="Button_Click_1"></Button>
            <Button Grid.Column="2" Margin="10,0,10,10" Content="Change" IsCancel="False" Click="Button_Click_2"></Button>
            <Button Grid.Column="3" Margin="10,0,10,10" Content="Cancel" IsCancel="True"></Button>
        </Grid>
    </Grid>
</Window>